{
  "watch": ["src/**/*"],
  "ext": "js,json",
  "ignore": ["node_modules/**/*", "*.log"],
  "verbose": false,
  "quiet": true,
  "env": {
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "UV_THREADPOOL_SIZE": "128",
    "KEEP_ALIVE_TIMEOUT": "65000",
    "HEADERS_TIMEOUT": "66000"
  }
}
